@page
@model IndexModel
@{
	ViewData["Title"] = "Home Page";
}

<script src="https://cdn.tailwindcss.com"></script>

<style>
	body {
		font-family: 'Inter', sans-serif;
		background-color: #f3f4f6;
	}
</style>

<div class="min-h-screen flex flex-col items-center justify-center p-4">
	<header class="text-center mb-10">
		<h1 class="text-4xl font-extrabold text-gray-900 mb-2">Razor Page de Demonstração</h1>
		<p class="text-lg text-gray-600">Usando o componente personalizado <span class="font-mono text-yellow-600">Botao.razor</span>.</p>
	</header>

	<main class="w-full max-w-md bg-white p-8 shadow-2xl rounded-xl">
		<h2 class="text-2xl font-semibold mb-6 text-gray-800">Interagindo com o Componente</h2>

		<div class="mb-8">
			<label class="block text-sm font-medium text-gray-700 mb-2">Componente de Botão:</label>
			<Botao />
		</div>

	</main>
</div>
